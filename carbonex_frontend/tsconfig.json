{
"compilerOptions": {
    "target": "es6",                   // Upgrade from es5 for better modern JS support
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"                  // âœ… Use "react-jsx" for React 17+ automatic JSX runtime
},
"include": ["src"]

}
